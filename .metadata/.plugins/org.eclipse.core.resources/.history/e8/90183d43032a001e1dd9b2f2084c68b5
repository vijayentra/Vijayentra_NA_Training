package com.corejava.a1;
import java.util.*;
public class TaxCalc {

	public static void main(String[] args) {
		double LPA;
		Scanner sc =new Scanner(System.in);
		System.out.println("enter your LPA : ");
		LPA = sc.nextDouble();
		switch(LPA) {
		case (LPA>0&&LPA<=180000):
			System.out.println("Nil");
			break;
		case (LPA>180000&&LPA<=300000):
			System.out.println(LPA*.1);
			break;
		case (LPA>300000&&LPA<=500000):
			System.out.println(LPA*.2);
			break;
		case (LPA>500000&&LPA<1000000):
			System.out.println(LPA*.3);
			break;
		default :
			System.out.println("Invalid entry");
		}
	}

}
